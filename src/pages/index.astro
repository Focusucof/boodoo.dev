---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { Badge } from '@/components/ui/badge'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects, getRecentPosts } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import ProjectCard from '@/components/ProjectCard.astro'

const blog = await getRecentPosts(SITE.featuredPostCount)
const projects = await getAllProjects()

const experience = [
  {
    role: 'Technical IT Assistant',
    company: 'Ontario Public Services (MPBSDP)',
    startDate: 'May 2025',
    endDate: 'Aug 2025',
    location: 'Toronto, Canada',
    description: ["Engineered internal business applications (scheduling and payroll) utilizing Azure Entra ID for secure authentication.",
                  "Modernized legacy C# applications by refactoring code to meet current security and compliance standards.",
                  "Managed and executed pre-production testing cycles, identifying and resolving critical defects for a seamless release.", 
                  "Designed and implemented frontend modifications to ensure AODA compliance, enhancing accessibility for all users."],
    tech: ['C#', 'Azure', 'React', 'Testing', 'Microsoft Teams', 'Outlook'],
    logo: 'lucide:building', 
  },
  {
    role: 'Classroom Facilitator',
    company: 'CodeNinjas',
    startDate: 'Apr 2023',
    endDate: 'May 2025',
    location: 'Ajax, Canada',
    description: [
      'Facilitated training sessions on programming and software design.',
      'Coordinated annual course programs by overseeing scheduling, communications, and finances.',
      'Curated a dynamic and engaging program curriculum, specialized in robotics, hardware design, and AI.',
      'Maintain updates on Microsoft Sharepoint including managing permissions and updating company documents.'
    ],
    tech: ['JavaScript', 'Python', 'Robotics', 'Unity', 'Roblox', 'Lua', 'C#', 'Teaching'],
    logo: 'lucide:sword', // Placeholder icon
  },
  {
    role: "Audio Technician & DJ",
    company: 'DEVN Music',
    startDate: 'May 2023',
    endDate: null,
    location: 'Toronto, Canada',
    description: [
      "Assemble and optimize audio systems, configuring amplifiers, speakers, and equipment for optimal sound quality during live performances.",
      "Proficiently manage Instagram and TikTok accounts, consistently posting content to drive community engagement."
    ],
    tech: ['Audio Engineering', 'Mixing', 'Sound Design', 'Social Media'],
    logo: 'lucide:audio-lines', // Placeholder icon
